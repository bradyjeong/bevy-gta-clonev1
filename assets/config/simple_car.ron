// Super Car Physics Configuration
// Data-driven constants for super car movement (eliminates magic numbers)
SimpleCarSpecs(
    // Core movement specs
    base_speed: 70.0,           // Base acceleration/movement speed (super car performance)
    rotation_speed: 3.0,        // Steering rotation rate (rad/s) - super cars turn faster

    // Physics smoothing
    linear_lerp_factor: 4.0,    // Linear velocity smoothing rate
    angular_lerp_factor: 6.0,   // Angular velocity smoothing rate

    // Emergency systems
    emergency_brake_linear: 0.1,  // Linear velocity multiplier during emergency brake
    emergency_brake_angular: 0.5, // Angular velocity multiplier during emergency brake

    // Momentum physics (when no input)
    drag_factor: 0.92,            // Momentum decay per second (cars have rolling resistance)

    // Arcade physics tuning (ULTRA AGGRESSIVE)
    accel_lerp: 5.0,              // Acceleration smoothing rate
    brake_lerp: 8.0,              // Braking smoothing rate (INCREASED for responsive braking)
    grip: 8.0,                    // Lateral grip (higher = sticks better)
    drift_grip: 1.2,              // Grip during emergency brake (VERY LOW for easy drifts)
    steer_gain: 8.0,              // Base steering responsiveness (VERY AGGRESSIVE!)
    steer_speed_drop: 0.015,      // How much steering decreases with speed (MINIMAL penalty)
    stability: 0.3,               // Auto-straightening torque (VERY LOW for sharp response)
    ebrake_yaw_boost: 2.0,        // Extra yaw when e-braking (MASSIVE boost for sharp drifts)
    downforce_scale: 0.3,         // Grip increase at high speeds
    
    // Phase 1 GTA-style helpers
    auto_brake_gain: 12.0,        // Auto-brake strength when throttle opposes velocity
    slip_extremum: 1.5,           // Slip ratio for maximum grip (peak at 1.5 m/s)
    slip_asymptote: 12.0,         // Slip ratio for full slide (12.0 = quicker falloff)
    slip_stiffness: 1.0,          // Overall slip curve scale (1.0 = standard)
    brake_grip_loss: 0.25,        // Lateral grip reduction during heavy braking (25%)

    // Phase 2: Stability helpers
    ground_ray_length: 1.6,       // Raycast distance for ground detection (meters)
    air_gravity_scale: 1.2,       // Extra downward force when airborne (multiplier)
    airborne_steer_scale: 0.3,    // Steering reduction when airborne (30%)
    roll_kp: 3.5,                 // Roll correction proportional gain
    roll_kd: 1.2,                 // Roll correction derivative gain
    roll_torque_limit: 400.0,     // Maximum roll correction torque (Nâ‹…m)

    // Phase 3: Drivability polish
    reverse_steer_invert: true,   // Invert steering when reversing (realistic)
    airborne_angular_scale: 0.5,  // Angular velocity scale when airborne (50%)
    visual_roll_gain: 0.0,        // Disabled - no body lean
    visual_pitch_gain: 0.0,       // Disabled - no body pitch
    visual_spring: 14.0,          // Slightly stiffer spring
    visual_damper: 7.5,           // Near-critical damping for smooth motion (was 2.5)

    // Phase 1: Visual wheel system
    max_steer_deg: 28.0,          // Maximum steering angle (degrees)
    wheel_radius: 0.33,           // Wheel radius (meters)
    wheel_positions: (            // Array of 4 wheel positions (X: left-, right+; Z: forward-, rear+)
        (0.85, -0.32, -1.40),     // FL: Front Left (X+, Z- is forward)
        (-0.85, -0.32, -1.40),    // FR: Front Right (X-, Z- is forward)
        (0.85, -0.32, 1.40),      // RL: Rear Left (X+, Z+ is rear)
        (-0.85, -0.32, 1.40),     // RR: Rear Right (X-, Z+ is rear)
    ),
)
