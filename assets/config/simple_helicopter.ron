// Simple Helicopter Physics Configuration  
// Data-driven constants for helicopter movement (eliminates magic numbers)
SimpleHelicopterSpecs(
    // Used for hover-hold vertical speed clamping
    vertical_speed: 150.0,       // Up/down movement speed (m/s)
    
    // Rotation rates (direct angular velocity control)
    yaw_rate: 9.0,             // Rotation around Y axis (rad/s) - snappier for keyboard
    pitch_rate: 7.0,           // Forward/backward tilt (rad/s) - faster response
    roll_rate: 7.0,            // Side tilt (rad/s) - faster response
    
    // Physics smoothing
    angular_lerp_factor: 12.0,  // Angular velocity smoothing rate - crisp keyboard feel (~0.08s)
    
    // Rotor animation speeds
    main_rotor_rpm: 20.0,       // Main rotor rotation speed (rad/s)
    tail_rotor_rpm: 35.0,       // Tail rotor rotation speed (rad/s)
    
    // Force-based physics parameters
    spool_up_rate: 1.0,         // RPM increase rate per second - snappier lift response
    spool_down_rate: 0.50,      // RPM decrease rate per second - less float after release
    min_rpm_for_lift: 0.30,     // Minimum RPM required for lift
    rpm_to_lift_exp: 1.5,       // Exponential curve for lift calculation
    max_lift_margin_g: 1.7,     // Maximum lift in G-forces
    
    // GTA-style direct thrust (replaces cyclic tilt)
    forward_thrust: 160000.0,    // Forward/backward thrust force (N)
    strafe_thrust: 130000.0,     // Left/right strafe thrust force (N)
    
    // Cosmetic visual tilt (GTA-style feedback)
    visual_tilt_pitch_max: 15.0, // Max forward/back tilt angle (degrees)
    visual_tilt_roll_max: 18.0,  // Max left/right tilt angle (degrees)
    visual_tilt_speed: 3.0,      // How fast tilt responds to movement
    
    horiz_drag: 0.40,           // Horizontal drag coefficient - shorter slide distance (~2.5s)
    damage_authority_min: 0.3,  // Minimum control authority when damaged
    rotor_wash_scale: 1.0,      // Rotor wash effect scale
    hover_bias: 0.03,           // Lift bias above weight to ensure liftoff
    collective_gain: 0.75,      // Collective control sensitivity - quicker altitude changes
    input_deadzone: 0.10,       // Input deadzone for all axes
    
    // GTA SA-style per-axis stabilization (multiplicative damping applied per-frame when input neutral)
    // NOTE: Stabilization values are per-second residual factors (lower = stronger damping)
    pitch_stab: 0.35,           // Pitch axis damping - faster auto-leveling for arcade feel
    roll_stab: 0.30,            // Roll axis damping - even faster roll auto-level
    yaw_stab: 0.63,             // Yaw axis damping - moderate, allows drift but prevents spin
    
    // P2 Ground probe and effects
    ground_ray_length: 5.0,             // Ground detection ray length (m)
    ground_effect_gain: 0.5,            // Lift multiplier near ground (50% extra at ground level)
    ground_effect_max_altitude: 3.0,    // Max altitude for ground effect (m)
    landed_alignment_kp: 1.0,           // Terrain alignment proportional gain (lower than cars)
    landed_alignment_kd: 0.3,           // Terrain alignment derivative gain
    landed_alignment_limit: 1.5,        // Max alignment correction rate (rad/s)
    near_ground_drag: 2.0,              // Extra horizontal drag near ground
    near_ground_max_altitude: 2.0,      // Max altitude for near-ground drag (m)

    // P1: Helicopter Squat Drag
    squat_drag_gain: 5.0,               // Extra horizontal damping near ground (kills skating on landing)

    // Ground Idle Collective Control
    collective_rate: 1.5,        // Collective accumulation rate (per second)
    wow_on_height: 0.40,         // Enter WOW below this height (m)
    wow_off_height: 0.80,        // Exit WOW above this height (m)
    takeoff_collective: 0.18,    // Collective threshold to start lifting (0-1)
    takeoff_blend: 0.10,         // Blend width for takeoff transition
    ground_cyclic_scale: 0.3,    // Cyclic input scale when WOW (0-1)
    ground_yaw_scale: 0.6,       // Yaw input scale when WOW (0-1)
)
